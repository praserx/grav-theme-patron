{% extends 'partials/base.html.twig' %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-sm-12 breadcrumbs">
            {% include 'partials/breadcrumbs.html.twig' %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 page">
            <div class="ui cards">
                {% for contact in theme.organization.headquarters.contacts %}
                <div class="card">
                    <div class="content">
                        {% if contact.photo|length > 0 %}
                        <img class="right floated mini ui image" src="{{ (contact.photo|first).path  }}">
                        {% else %}
                        <img class="right floated mini ui image" src="{{ theme_url }}/images/avatar.jpg">
                        {% endif %}
                        <div class="header">
                            {{ contact.name }}
                        </div>
                        <div class="meta">
                            {{ contact.nickname }}
                        </div>
                        <div class="description">
                            {{ contact.title }}
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="ui list">
                            <div class="item">
                                <i class="phone icon"></i>
                                <div class="content">
                                {{ contact.phone }}
                                </div>
                            </div>
                            <div class="item">
                                <i class="mail icon"></i>
                                <div class="content">
                                <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <p>{{ page.content|raw }}</p>
        </div>
    </div>
</div>

{% endblock %}